<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <!-- Title 样式 -->
    <style name="TitleLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/relaxation_rcs_title</item>
    </style>

    <!-- 导航栏按钮 -->
    <style name="MenuTitleTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7b7a7a</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 菜单标题 没有边距的，菜单内容，菜单左边文字，左边有图片时 （黑色） -->
    <style name="MenuTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/contact_nick_name_txt</item>
    </style>
    <!-- 自定义标题按钮, 包括尺寸 -->
    <style name="TitleButtonStyle" parent="MenuTitleTextStyle">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <!-- 导航栏标题 -->
    <style name="MenuNavigationTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00b168</item>
        <!-- 设置 字体阴影效果 -->
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">1</item>
    </style>
    
        <!-- 白色菜单，没有边距， 显示1行的高 -->
    <style name="addMarginMenuLayout">
        <item name="android:minHeight">44dip</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    
    <style name="StatusImage">
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_width">24dip</item>
    </style>
    
        <!-- 有边距，左边大尺寸图片 -->
    <style name="StatusImage.addMargin">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>
    
    
        <!-- 自定义按钮, 包括尺寸 -->
    <style name="ButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>
    
        <!-- 行间距（如菜单之间，无说明文字） -->
    <style name="LineLayout">
        <item name="android:layout_height">10dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
</resources>